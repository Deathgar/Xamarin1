<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Test3.PokemonPage">
    <ContentPage.Content>
        <StackLayout Padding="10,10,0,0">
            <ScrollView>
                <StackLayout>
                    <Label Text="Name:" FontSize="Medium" Margin="0,6,0,0"></Label>
                    <Label x:Name="Name" Text="{Binding Name}" FontSize="Small" Margin="10,0,0,0"></Label>
                    <Label Text="Height:" FontSize="Medium"  Margin="0,3,0,0"></Label>
                    <Label x:Name="Height" FontSize="Small" Margin="10,0,0,0"/>
                    <Label Text="Weight:" FontSize="Medium" Margin="0,3,0,0"></Label>
                    <Label x:Name="Weight" FontSize="Small" Margin="10,0,0,0"/>
                </StackLayout>
            </ScrollView>
            <StackLayout Orientation="Horizontal">
                <Button HorizontalOptions="Center" VerticalOptions="End" Margin="0,0,0,8" Text="Change" HeightRequest="45" WidthRequest="100" FontSize="10" Clicked="Changing"></Button>
            </StackLayout>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>